<link rel="stylesheet" href="../styles/rooms-styles-left.css">
<link rel="stylesheet" href="../styles/rooms-styles-right.css">
<link rel="stylesheet" href="../styles/prompt-styles.css">
<script src="../script/rooms-script.js"></script>

<div id="join-prompt">
<div id="close-prompt">✘</div>
    <div id="elements-prompt">
        <p id="msg-prompt">Wpisz hasło:</p>
        <label for="password-input-prompt"></label><input id="password-input-prompt" placeholder="Hasło pokoju" type="password">
        <button id="button-prompt">Dołącz!</button>
    </div>
</div>

<div class="container">
    <div id="add-lobby">
        <label for="room-name-input"></label>
        <input id="room-name-input" placeholder="Nazwa pokoju">
        <label for="room-password-input"></label>
        <input id="room-password-input" type="password" placeholder="Hasło pokoju">
        <label for="room-users-select">
        </label><select id="room-users-select">
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
    </select>
        <button id="add-button">Utworz</button>
    </div>
    <div id="rooms-list"></div>
</div>

<div class="container" id="user-stats">
    <p id="welcome-msg"></p>
    <h2 id="your-stats">Twoje statystyki:</h2>
    <div class="stats-container">
        <h3 id="games-played"></h3>
        <h3 id="win-proc"></h3>
        <h3 id="bought-sum"></h3>
    </div>
    <div id="right" class="stats-container">
        <h3 id="games-won"></h3>
        <h3 id="avg-roll"></h3>
        <h3 id="money-sum">nwm co tu:</h3>
    </div>

    <h2 id="your-stats">Wybierz avatar:</h2>
    <div id="avatars">
        <img src="../avatars/avatar-0.jpg" alt="avatar" class="avatar" id="avatar-0">
        <img src="../avatars/avatar-1.jpg" alt="avatar" class="avatar" id="avatar-1">
        <img src="../avatars/avatar-2.jpg" alt="avatar" class="avatar" id="avatar-2">
        <img src="../avatars/avatar-3.jpg" alt="avatar" class="avatar" id="avatar-3">
        <img src="../avatars/avatar-4.jpg" alt="avatar" class="avatar" id="avatar-4">
        <img src="../avatars/avatar-5.jpg" alt="avatar" class="avatar" id="avatar-5">
    </div>

    <button id="log-out">Wyloguj</button>
</div>
